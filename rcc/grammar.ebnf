

program ::=
  (statement)*;

statement ::=
  global_definition || ...;

global_definition ::=
  KW_DEF ID literal;

type ::=
  ID; # (LCARROT ID (COMMA ID)* RCARROT)?;

literal ::=
  NAT_LITERAL;





### Punctuation
SEMI = ";"
COMMA = ","
LCARROT = "<"
RCARROT = ">"

### Keywords
KW_MUT = "mut"
KW_CONST = "const"
KW_DEF = "def"

### Operators
ASSIGN = "="

### ID
ID = "[a-zA-Z]\w*"

### Literals
NAT_LITERAL = "0(\d|_)+"